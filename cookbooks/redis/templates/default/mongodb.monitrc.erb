check process mongodb with pidfile /var/run/mongodb.pid
  start program = "/etc/init.d/mongodb start"
  stop program = "/etc/init.d/mongodb stop"
  <% if node[:environment] == 'production' %>
  if 10 restarts within 60 cycles then alert
  if cpu is greater than 60% for 10 cycles then alert
  <% end %>
  if failed host 127.0.0.1 port 27017 then restart
  if 10 restarts within 10 cycles then timeout
